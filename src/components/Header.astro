---
import { Icon } from "astro-icon/components";
import navData from "../data/navData";
import Link from "./Link.astro";
---

<header class='flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl w-full mx-auto'>
    <a href='/' class='flex items-center gap-x-4' aria-label='Go home'>
        <!--<img src='/heartbeat.png' width={60} height={60} alt='Heartbeat Icon' class='rounded-2xl aspect-thumbnail object-cover' />-->
        <Icon name='blog' width={30} height={30} />
        <p class='uppercase text-3xl text-zinc-900'>blog</p>
    </a>
    <nav aria-label='Primary'>
        <ul class='flex gap-x-8 items-center'>
            <li class='text-teal-900 font-bold'>
                <Icon name='blog' width={20} height={20} />
            </li>
            {
                navData.map((row) => (
                    <li>
                        <Link
                            href={row.path}
                            text={row.name}
                            style='primary'
                            isFilled
                            borderVisible
                            data-navLink
                            icon={{ name: "mdi:blog-outline", side: "left" }}
                        />
                    </li>
                ))
            }
        </ul>
    </nav>
</header>
